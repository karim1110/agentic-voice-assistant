# ============================================
# API Keys
# ============================================

# OpenAI (GPT-4, GPT-3.5, etc.)
OPENAI_API_KEY=sk-your-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# Google (Gemini)
GOOGLE_API_KEY=

# Web Search API (Brave/Serper/Bing)
SEARCH_API_KEY=
SEARCH_PROVIDER=brave


# ============================================
# LLM Configuration (Model-Agnostic)
# ============================================

# Provider: openai | anthropic | local
LLM_PROVIDER=openai

# Model name (provider-specific)
# OpenAI: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
# Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229
# Local: depends on your setup (e.g., llama-3.1-8b)
LLM_MODEL=gpt-4o-mini

# Alternative: Use LLM_API_KEY if different from OPENAI_API_KEY
LLM_API_KEY=

# For local models (OpenAI-compatible API like vLLM, Ollama)
LLM_BASE_URL=http://localhost:8000/v1

# Sampling temperature
LLM_TEMPERATURE=0.3


# ============================================
# Embeddings
# ============================================

# SentenceTransformer model for RAG
EMBED_MODEL=all-MiniLM-L6-v2


# ============================================
# Speech (ASR / TTS)
# ============================================

# ASR: Whisper model size (tiny, base, small, medium, large)
ASR_MODEL=small

# TTS Provider: openai | elevenlabs | azure | amazon
TTS_PROVIDER=openai

# Voice for TTS (OpenAI: alloy, echo, fable, onyx, nova, shimmer)
TTS_VOICE=alloy


# ============================================
# Data & Indexing
# ============================================

# Path to processed products CSV
DATA_PRODUCTS=./data/processed/products.csv

# Path to reviews (optional)
DATA_REVIEWS=

# ChromaDB index storage path
INDEX_PATH=./data/index

# Index backend (currently only chroma supported)
INDEX_STORE=chroma


# ============================================
# MCP Server
# ============================================

# Base URL for MCP tool server
MCP_BASE=http://127.0.0.1:8000

# MCP Server port
MCP_PORT=8000


# ============================================
# Logging & Debug
# ============================================

# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Enable verbose agent logging
VERBOSE_AGENTS=true
